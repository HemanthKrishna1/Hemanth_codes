package com.hemanth;

public class github {
    public static void main(String[] args) {
        String str = "hello";
        String str1 = "nitin";
        System.out.println(palindrom_string(str1));
    }
    static boolean palindrom_string(String str){
        if(str.length()==0){
            return true;
        }
        int i =0;
        int j = str.length() -1;
        while (i < j){
            if (str.charAt(i) != str.charAt(j)){
                return false;
            }
            i++;
            j--;
        }
        return true;
    }
}
